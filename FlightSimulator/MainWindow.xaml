        xmlns:local="clr-namespace:FlightSimulator"
        xmlns:var="clr-namespace:FlightSimulator.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1110">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <var:LeftUserControl HorizontalAlignment="Center" VerticalAlignment="Center"> </var:LeftUserControl>
